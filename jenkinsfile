pipeline {
    agent any
    options {
        skipDefaultCheckout()
    }
    stages{
        stage('clean up code') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout using scm') {
            steps {
                checkout scm
            }
        } // Close the 'Checkout using scm' stage

        stage('Build') {
            agent {
                docker {
                    image 'node:22.11.0-alpine3.20'
                    args '-u root'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    node --version
                    npm --version
                    npm install
                    npm run build  
                '''
            }
        }
    }
}